{
  "imports": {
    "hono": "jsr:@hono/hono@^4.10.7",
    "hono/cookie": "jsr:@hono/hono@^4.10.7/cookie",
    "@nikki/core/": "../../packages/core/src/",
    "@nikki/db/": "../../packages/db/src/",
    "@std/assert": "jsr:@std/assert@^0.224.0"
  },
  "tasks": {
    "start": "$env:DENO_DIR=\"../../.deno_cache\"; deno run --node-modules-dir=none --allow-env --allow-read --allow-write --allow-net --allow-ffi --allow-sys main.ts",
    "dev": "$env:DENO_DIR=\"../../.deno_cache\"; deno run --node-modules-dir=none --allow-env --allow-read --allow-write --allow-net --allow-ffi --allow-sys --watch main.ts",
    "test": "$env:DENO_DIR=\"../../.deno_cache\"; deno run --node-modules-dir=none -A ./tests/run.ts",
    "check": "$env:DENO_DIR=\"../../.deno_cache\"; deno check --node-modules-dir=none main.ts"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}
