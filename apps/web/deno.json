{
  "tasks": {
    "check": "deno fmt --check && deno lint",
    "start": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.6.8/",
    "preact": "https://esm.sh/preact@10.19.6",
    "preact/": "https://esm.sh/preact@10.19.6/",
    "@preact/signals": "https://esm.sh/@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/@preact/signals-core@1.5.1",
    "@domain/": "../../packages/domain/",
    "@usecase/": "../../packages/usecase/",
    "@infra/": "../../packages/infrastructure/",
    "@db/": "../../packages/db/",
    "std/http/cookie": "https://deno.land/std@0.224.0/http/cookie.ts",
    "std/testing/asserts": "https://deno.land/std@0.224.0/testing/asserts.ts",
    "std/path": "https://deno.land/std@0.224.0/path/mod.ts",
    "std/encoding/base64": "https://deno.land/std@0.224.0/encoding/base64.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
